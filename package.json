{
  "name": "bloggo",
  "version": "0.0.1",
  "private": true,
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^3.0.0",
    "autoprefixer": "^10.0.0",
    "clj-kondo": "^2020.1.13",
    "cssnano": "^4.1.10",
    "karma": "^5.2.3",
    "karma-chrome-launcher": "^3.1.0",
    "karma-cljs-test": "^0.1.0",
    "marked": "^0.8.2",
    "nodemon": "^2.0.4",
    "postcss": "^8.0.9",
    "postcss-cli": "^8.0.0",
    "shadow-cljs": "^2.8.94",
    "tailwindcss": "^1.8.10"
  },
  "dependencies": {
    "create-react-class": "^15.7.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "scripts": {
    "start": "npm run build:dev & npm run build:styles:dev",
    "build:dev": "shadow-cljs watch app devcards app-test",
    "build:prod": "shadow-cljs release app",
    "build:styles:dev": "postcss -o public/styles.css --watch --verbose styles/styles.css",
    "build:styles:prod": "NODE_ENV=production postcss -o public/styles.css --verbose styles/styles.css",
    "build": "npm run build:prod && npm run build:styles:prod",
    "test-watch": "shadow-cljs watch app-test",
    "test": "shadow-cljs compile app-test-ci && node_modules/karma/bin/karma start --single-run",
    "lint": "clj-kondo --lint src",
    "report": "shadow-cljs run shadow.cljs.build-report app report.html"
  }
}
