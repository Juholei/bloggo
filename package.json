{
  "name": "bloggo",
  "version": "0.0.1",
  "private": true,
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^2.1.0",
    "clj-kondo": "^2020.1.13",
    "cssnano": "^4.1.10",
    "karma": "^4.4.1",
    "karma-chrome-launcher": "^3.1.0",
    "karma-cljs-test": "^0.1.0",
    "marked": "^0.8.2",
    "nodemon": "^1.19.4",
    "postcss-cli": "^7.1.0",
    "serverless-finch": "^2.4.3",
    "serverless-offline": "^5.12.0",
    "shadow-cljs": "^2.9.0"
  },
  "dependencies": {
    "autoprefixer": "^9.7.5",
    "create-react-class": "^15.6.3",
    "react": "^16.13.1",
    "react-dom": "^16.13.0",
    "tailwindcss": "^1.2.0"
  },
  "scripts": {
    "start": "npm run build:frontend:dev & npm run build:styles:dev",
    "build:frontend:dev": "shadow-cljs watch app devcards app-test",
    "build:frontend:prod": "shadow-cljs release app",
    "build:styles:dev": "postcss -o public/styles.css --watch --verbose styles/styles.css",
    "build:styles:prod": "NODE_ENV=production postcss -o public/styles.css --verbose styles/styles.css",
    "build": "npm run build:frontend:prod && npm run build:styles:prod",
    "test-watch": "shadow-cljs watch app-test",
    "test": "shadow-cljs compile app-test-ci && node_modules/karma/bin/karma start --single-run",
    "serverless-offline": "npx nodemon --exec \"serverless offline\" --watch target/bloggo.js",
    "lint": "clj-kondo --lint src",
    "report": "shadow-cljs run shadow.cljs.build-report app report.html"
  }
}
